<?xml version="1.0" encoding="ISO-8859-1"?>
<!--
    KING KI-525A Pictorial Indicator
    Based on Syd Adams KI-525A
-->

<PropertyList>

  <path>ki252a.ac</path>
    
  <animation>
    <object-name>KI252a.fond</object-name>
    <object-name>KI252a.face</object-name>
    <object-name>KI252a.HDGknob</object-name>
    <object-name>KI252a.GSneedle</object-name>
    <object-name>KI252a.compass</object-name>
    <object-name>KI252a.nav-warning</object-name>
    <object-name>KI252a.hdg-warning</object-name>
    <object-name>KI252a.kfc-crs</object-name>
    <object-name>KI252a.kfc-crs2</object-name>
    <object-name>KI252a.To-flag</object-name>
    <object-name>KI252a.From-flag</object-name>
    <object-name>KI252a.kfc-hdgbug</object-name>
    <object-name>KI252a.CRSknob</object-name>
    <object-name>KI252a.OBSPick.L</object-name>
    <object-name>KI252a.OBSPick.R</object-name>
    <object-name>KI252a.HDGPick.L</object-name>
    <object-name>HKI252a.DGPick.R</object-name>

    <object-name>KI252a.vitre</object-name>
  </animation>

  <!-- working for Rembrandt -->
  <effect>
    <inherits-from>Aircraft/Ryan-Navion/Models/Effects/Glass/glass</inherits-from>
    <object-name>KI252a.vitre</object-name>
  </effect>
  
  <animation>
    <type>material</type>
    <object-name>KI252a.face</object-name>
    <object-name>KI252a.HDGknob</object-name>
    <object-name>KI252a.GSneedle</object-name>
    <object-name>KI252a.compass</object-name>
    <object-name>KI252a.nav-warning</object-name>
    <object-name>KI252a.hdg-warning</object-name>
    <object-name>KI252a.kfc-crs</object-name>
    <object-name>KI252a.To-flag</object-name>
    <object-name>KI252a.From-flag</object-name>
    <object-name>KI252a.kfc-hdgbug</object-name>
    <object-name>KI252a.CRSknob</object-name>
    <object-name>KI252a.kfc-crs2</object-name>
    <emission>
      <factor-prop>/systems/electrical/outputs/instrument-lights</factor-prop>
      <red>   0.50 </red>
      <green> 0.25 </green>
      <blue>  0.25 </blue>
    </emission>
  </animation>

  <!-- 	KI-525A -->	 
  <animation>
    <type>rotate</type>
    <object-name>KI252a.kfc-hdgbug</object-name>
    <property>autopilot/internal/fdm-heading-bug-error-deg</property>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>KI252a.kfc-crs</object-name>
    <object-name>KI252a.kfc-crs2</object-name>
    <object-name>KI252a.To-flag</object-name>
    <object-name>KI252a.From-flag</object-name>
    <object-name>KI252a.compass</object-name>
    <property>instrumentation/heading-indicator/indicated-heading-deg</property>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>KI252a.kfc-crs</object-name>
    <object-name>KI252a.kfc-crs2</object-name>
    <object-name>KI252a.To-flag</object-name>
    <object-name>KI252a.From-flag</object-name>
    <property>instrumentation/nav/radials/selected-deg</property>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>
 
  <animation>
    <type>translate</type>
    <object-name>KI252a.kfc-crs2</object-name>
    <property>instrumentation/nav[0]/heading-needle-deflection-disp</property>
    <interpolation>
      <entry><ind>-1</ind><dep>-0.018</dep></entry>
      <entry><ind> 0</ind><dep> 0.000</dep></entry>
      <entry><ind> 1</ind><dep> 0.018</dep></entry>
    </interpolation>
    <axis>
      <x>0.0</x>
      <y>1.0</y>
      <z>0.0</z>
    </axis>
  </animation>

  <animation>
    <type>translate</type>
    <object-name>KI252a.GSneedle</object-name>
    <property>instrumentation/nav[0]/gs-needle-deflection-norm</property>
    <interpolation>
      <entry><ind> -1.0 </ind><dep> -0.0085 </dep></entry>
      <entry><ind> -0.5 </ind><dep> -0.0085 </dep></entry>
      <entry><ind>  0.0 </ind><dep>  0.0000 </dep></entry>
      <entry><ind>  1.0 </ind><dep>  0.0162 </dep></entry>
    </interpolation>
    <axis>
      <x>0.0</x>
      <y>0.0</y>
      <z>1.0</z>
    </axis>
  </animation>

  <animation>
    <type>select</type>
    <object-name>KI252a.To-flag</object-name>
    <condition>
      <greater-than>
        <property>systems/electrical/outputs/nav[0]</property>
        <value>18</value>
      </greater-than>
      <property>instrumentation/nav[0]/in-range</property>
      <property>instrumentation/nav[0]/to-flag</property>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>KI252a.From-flag</object-name>
    <condition>
      <greater-than>
        <property>systems/electrical/outputs/nav[0]</property>
        <value>18</value>
      </greater-than>
      <property>instrumentation/nav[0]/in-range</property>
      <property>instrumentation/nav[0]/from-flag</property>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>KI252a.nav-warning</object-name>
    <condition>
      <or>
        <not>
          <property>instrumentation/nav/in-range</property>
        </not>
        <less-than>
          <property>systems/electrical/outputs/nav</property>
          <value>18</value>
        </less-than>
      </or>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>KI252a.hdg-warning</object-name>
    <condition>
      <or>
        <less-than>
          <property>systems/electrical/outputs/nav</property>
          <value>18</value>
        </less-than>
        <less-than>
          <property>instrumentation/heading-indicator/spin</property>
          <value>0.6</value>
        </less-than>
      </or>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>KI252a.GSneedle</object-name>
    <condition>
      <and>
        <property>instrumentation/nav/has-gs</property>
        <less-than>
          <property>instrumentation/nav/gs-distance</property>
          <value>30000.0</value>
        </less-than>
      </and>
    </condition>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>KI252a.CRSknob</object-name>
    <property>instrumentation/nav/radials/selected-deg</property>
    <center>
      <x-m>  0.01135 </x-m>
      <y-m> -0.03916 </y-m>
      <z-m> -0.02491 </z-m>
    </center>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>KI252a.OBSPick.L</object-name>
    <visible>false</visible>
    <action>
      <button>0</button>
      <repeatable>true</repeatable>
      <binding>
        <command>property-adjust</command>
        <property>instrumentation/nav/radials/selected-deg</property>
        <step>-1</step>
        <min>0</min>
        <max>360</max>
        <wrap>1</wrap>
      </binding>
    </action>
    <action>
      <button>1</button>
      <repeatable>true</repeatable>
      <binding>
        <command>property-adjust</command>
        <property>instrumentation/nav/radials/selected-deg</property>
        <step> -10 </step>
        <min>    0 </min>
        <max>  360 </max>
        <wrap>   1 </wrap>
      </binding>
    </action>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>KI252a.OBSPick.R</object-name>
    <visible>false</visible>
    <action>
      <button>0</button>
      <repeatable>true</repeatable>
      <binding>
        <command>property-adjust</command>
        <property>instrumentation/nav/radials/selected-deg</property>
        <step>  1 </step>
        <min>   0 </min>
        <max> 360 </max>
        <wrap>  1 </wrap>
      </binding>
    </action>
    <action>
      <button>1</button>
      <repeatable>true</repeatable>
      <binding>
        <command>property-adjust</command>
        <property>instrumentation/nav/radials/selected-deg</property>
        <step> 10 </step>
        <min>   0 </min>
        <max> 360 </max>
        <wrap>  1 </wrap>
      </binding>
    </action>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>KI252a.HDGknob</object-name>
    <property>autopilot/settings/heading-bug-deg</property>
    <center>
      <x-m>  0.01135 </x-m>
      <y-m>  0.03893 </y-m>
      <z-m> -0.02491 </z-m>
    </center>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>KI252a.HDGPick.L</object-name>
    <visible>false</visible>
    <action>
      <button>0</button>
      <repeatable>true</repeatable>
      <binding>
        <command>property-adjust</command>
        <property>autopilot/settings/heading-bug-deg</property>
        <step> -1 </step>
        <min>   0 </min>
        <max> 360 </max>
        <wrap>  1 </wrap>
      </binding>
    </action>
    <action>
      <button>1</button>
      <repeatable>true</repeatable>
      <binding>
        <command>property-adjust</command>
        <property>autopilot/settings/heading-bug-deg</property>
        <step> -10 </step>
        <min>    0 </min>
        <max>  360 </max>
        <wrap>   1 </wrap>
      </binding>
    </action>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>KI252a.HDGPick.R</object-name>
    <visible>false</visible>
    <action>
      <button>0</button>
      <repeatable>true</repeatable>
      <binding>
        <command>property-adjust</command>
        <property>autopilot/settings/heading-bug-deg</property>
        <step>  1 </step>
        <min>   0 </min>
        <max> 360 </max>
        <wrap>  1 </wrap>
      </binding>
    </action>
    <action>
      <button>1</button>
      <repeatable>true</repeatable>
      <binding>
        <command>property-adjust</command>
        <property>autopilot/settings/heading-bug-deg</property>
        <step> 10 </step>
        <min>   0 </min>
        <max> 360 </max>
        <wrap>  1 </wrap>
      </binding>
    </action>
  </animation>

</PropertyList>
