<!--  Annunciators  -->
  <animation>
    <type>select</type>
    <object-name>sby</object-name>
    <condition>
      <or>
        <equals>
          <property>instrumentation/transponder/inputs/func-knob</property>
          <value>1</value>
        </equals>
        <equals>
          <property>instrumentation/transponder/inputs/func-knob</property>
          <value>2</value>
        </equals>
      </or>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>gnd</object-name>
    <condition>
      <or>
        <equals>
          <property>instrumentation/transponder/inputs/func-knob</property>
          <value>3</value>
        </equals>
        <equals>
          <property>instrumentation/transponder/inputs/func-knob</property>
          <value>2</value>
        </equals>
      </or>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>on</object-name>
    <condition>
      <or>
        <equals>
          <property>instrumentation/transponder/inputs/func-knob</property>
          <value>4</value>
        </equals>
        <equals>
          <property>instrumentation/transponder/inputs/func-knob</property>
          <value>2</value>
        </equals>
      </or>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>alt</object-name>
    <condition>
      <or>
        <equals>
          <property>instrumentation/transponder/inputs/func-knob</property>
          <value>5</value>
        </equals>
        <equals>
          <property>instrumentation/transponder/inputs/func-knob</property>
          <value>2</value>
        </equals>
      </or>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>fl</object-name>
    <condition>
      <or>
        <greater-than>
          <property>instrumentation/transponder/altitude</property>
          <value>9999</value>
        </greater-than>
        <equals>
          <property>instrumentation/transponder/inputs/func-knob</property>
          <value>2</value>
        </equals>
      </or>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>reply</object-name>
    <condition>
      <or>
        <property>instrumentation/transponder/ident</property>
        <equals>
          <property>instrumentation/transponder/inputs/func-knob</property>
          <value>2</value>
        </equals>
      </or>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>digits</object-name>
    <condition>
      <greater-than>
        <property>instrumentation/transponder/inputs/func-knob</property>
        <value>1</value>
      </greater-than>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>altitude</object-name>
